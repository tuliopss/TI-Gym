<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/Registro/style.css" />
    <link rel="icon" type="image/x-icon" href="/Fotos/Register/LogoTIGYM.png">

    <title>Sign up</title>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <form action="/register" method="post" class="g-3">
            <div class="row">
              <div class="col-12">
                <label for="inputEmail4" class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="inputEmail4"
                  name="email"
                  autocomplete="off"
                />
              </div>
              <div class="col-12">
                <label for="inputUsername4" class="form-label">Username</label>
                <input
                  type="text"
                  class="form-control"
                  id="inputUsername"
                  name="username"
                  autocomplete="off"
                />
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <label for="inputPassword" class="form-label">Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="inputPassword"
                  name="password"
                  autocomplete="off"
                />
              </div>
              <div class="col-12">
                <label for="inputPassword2" class="form-label"
                  >Confirm your password</label
                >
                <input
                  type="password"
                  class="form-control"
                  id="inputPassword2"
                  name="confirmPassword"
                />
              </div>
            </div>
            <div class="col-12">
              <button type="submit" id="btn-register" class="btn btn-primary">
                Sign in
              </button>
            </div>
          </form>

          <!-- ALTERAÇÕES ALERTS -->
          <% var alertEmail; %>
          <% if (alertEmail) { %>
            <p class="alert-message">Email já existente.</p>
          <% } else { %>
            <p class="alert-message" style="display: none;">Email já existente</p>
          <% } %>  

          <% var alertUser; %>
          <% if (alertUser) { %>
            <p class="alert-message">Nome de usuário já existente</p>
          <% } else { %>
            <p class="alert-message" style="display: none;">Nome de usuário já existente.</p>
          <% } %>  

          <% var alertPass; %>
          <% if (alertPass) { %>
            <p class="alert-message">Senhas diferentes.</p>
          <% } else { %>
            <p class="alert-message" style="display: none;">Senhas diferentes.</p>
          <% } %>  

          <% var alertEmpty; %>
          <% if (alertEmpty) { %>
            <p class="alert-message">Preencha todos os campos.</p>
          <% } else { %>
            <p class="alert-message" style="display: none;">Preencha todos os campos.</p>
          <% } %>  
        
          
        </div>
        <div class="col-md-6 d-flex align-items-center justify-content-center">
          <img
            src="/Fotos/Register/LogoTIGYM.png"
            alt="Logo"
            class="logo"
          />
        </div>
      </div>
    </div>
  </body>
</html>
