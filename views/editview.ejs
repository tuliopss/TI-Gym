<%- include('layout/header') %>

<div class="container">
  <img src="/Fotos/Login/LogoTIGYM.png" alt="Logo" class="logo" />

  <div class="popup" id="popupEdit">
        <div class="modal-content">

          <h2 class="atual-user">Edit user (<%= user.name %>) </h2>
          <form action="/instructor/edit/<%= user._id %>" id="formUpdateInstructor" method="post">
       
          <div class="mb-3">
            <label for="exampleInputMember1" class="form-label">Nome do instrutor</label>
            <input
              type="text"
              class="form-control"
              id="nameInstructor"
              name="name"
              autocomplete="off"
              required
              value="<%= user.name %>"
              />
          </div>
            <div class="mb-3">
              <label for="exampleInputAge1" class="form-label">Salário</label>
              <input
                type="number"
                class="form-control"
                id="salaryInstructor"
                name="salary"
                autocomplete="off"
                required
                value="<%= user.salary %>"
              />
            </div>
            <div class="mb-3">
              <label for="exampleInputAge1" class="form-label">Departamento</label>
              <input
                type="text"
                class="form-control"
                id="departmentInstructor"
                name="department"
                autocomplete="off"
                required
                value="<%= user.department %>"
              />
            </div>

            <input type="submit" name="submit" value="Edit user" class="btn btn-primary" id="editBtn"></input>
          </form>
        
       
        </div>
      </div>
